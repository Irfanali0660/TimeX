    <script>
        function addaddress(){
            document.getElementById("actionmodel").reset();
            document.getElementById("actionmodel").setAttribute('action','/addaddress')
        }
    function editaddress(id) {
      $.ajax({
      type: "POST",
      url: "/editaddress",
     data: {id},
     dataType: "json",
    encode: true,
    }).done(function (data) {

    if(data=="LOGIN FIRST"){
    console.log("SWEET");
                Swal.fire({
      icon: 'error',
      title: 'Oops...',
      text: 'Login first!',
      footer: '<a href="/login">Go to login</a>'
      })
      }

      console.log(data); 
      $('#actionmodel').attr('action','/updateaddress/'+data._id)
      $('#name').val(data.name)
      $('#house').val(data.house)
      $('#post').val(data.post)
      $('#city').val(data.city)
      $('#district').val(data.district)
      $('#state').val(data.state)
      $('#pin').val(data.pin)
    });
    }
    </script>

<script>
    function deleteaddress(id) {

      Swal.fire({
title: 'Are you sure?',
text: "You won't be able to revert this!",
icon: 'warning',
showCancelButton: true,
confirmButtonColor: '#3085d6',
cancelButtonColor: '#d33',
confirmButtonText: 'Yes, delete it!'
}).then((result) => {
if (result.isConfirmed) {
  
  $.ajax({
      type: "POST",
      url: "/deleteaddress",
     data: {id},
     dataType: "json",
    encode: true,
    }).done(function (data) { 
        $('#'+id+'item').remove()
      Swal.fire(
    'removed!',
    'This Address has been removed.',
    'success'
  )
    });
  }
  })
  }
  </script>






