<%- include('../admin/layout/adminhead.ejs') -%>

   <style>
    td {
     color: black !important;
    }
   </style>

    <div class="page-content">
        <div class="bg-dash-dark-2 py-4">
            <div class="container-fluid d-flex justify-content-between">
                <h2 class="h5 mb-0">Order detials</h2>
            </div>
        </div>
        <div class="widget-content container mt-3">
            <div class="row ">

                <div class="card-heading text-center">
                    <h2 class="card-title mb-3"><span>Order Details</span></h2>
                </div>

                <div class="card  p-0 my-2 text-black">
                    <div class="card-header">
                        Bill Details
                    </div>
                    <div class="card-body ">
                        <div class="d-flex flex-wrap ">
                            <div class="col-12 col-lg-6">

                                <table class="table table-striped  ">
                                    <tbody>
                                        <tr>
                                            <td>
                                                Payment Status
                                            </td>
                                            <td>
                                                <%= singleorder.payment.payment_status %> 
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Payment method
                                            </td>
                                            <td>
                                                <%= singleorder.payment.payment_method %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Payment id
                                            </td>
                                            <td>
                                                <%= singleorder.payment.payment_id %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Order id
                                            </td>
                                            <td>
                                                <%= singleorder._id %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Coupon
                                            </td>
                                            <td>

                                                <%= singleorder.coupon.name %> <small>(<%= singleorder.coupon.code %>)</small>

                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
                               
                            </div>
                            <div class="col-12 col-lg-6">

                                

                                <table class="table table-striped ">
                                    <tbody>
                                        <tr>
                                            <td>
                                                Sub-total
                                            </td>
                                            <td>
                                               $<%= singleorder.bill_amount %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Items
                                            </td>
                                            <td>
                                                <%= singleorder.products.length %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Discount
                                            </td>
                                            <td>
                                                %<%= singleorder.coupon.discount %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Discount amount
                                            </td>
                                            <td>
                                                <%= (Math.round((singleorder.bill_amount*singleorder.coupon.discount)/100)) %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Total
                                            </td>
                                            <td>
                                                <b class="text-danger fw-bold">$<%= (Math.round(singleorder.bill_amount-(singleorder.bill_amount*singleorder.coupon.discount)/100)) %>
                                                </b>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-5 col-md-12">
                    <div class="card card-default" style="border-color: white !important; color: black !important;">



                        <div class="card border-0 ad-box-shadow p-0 ">
                            <div class="card-header ">
                                <div class="card p-3 bg-light border-primary col-12 ">
                                    <p>Name: &nbsp;<span class="fw-bold"> <%= singleorder.address.name %></span> 
                                    </p>
                                    <p>House : &nbsp;<span class="fw-bold"><%= singleorder.address.house %> </span>
                                    </p>
                                    <p>Phone :&nbsp;<span class="fw-bold"><%= singleorder.userid.phone %> </span>
                                    </p>
                                    <p>Pin :&nbsp;<span class="fw-bold"><%= singleorder.address.pin %> </span>
                                    </p>
                                    <p>City :&nbsp;<span class="fw-bold"> <%= singleorder.address.city %></span>
                                    </p>
                                    <p>District :&nbsp;<span class="fw-bold"><%= singleorder.address.district %> </span>
                                    </p>
                                </div>
                            </div>
                            <div class="card-body">
                                
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-7 col-md-12 ">

                    <div class="admincard card card-default" style="border-color: white !important;">

                        <!-- <div class="card-body"> -->
                        <% singleorder.products.forEach(product=> { %>

                            <div class="card-body d-flex justify-content-between">

                                <div class="card p-4 bg-light col-3 mx-1">
                                    <img style="width: 100px; height: 100px;"
                                        src="/productimages/<%= product.product_id.image[0] %>" alt="">
                                </div>

                                <div class="card p-3 bg-light col-9 text-black d-flex align-items-around">
                                    <p>Name: &nbsp;<small class=" fw-bold">
                                            <%= product.name %>
                                        </small></p>
                                    <p>Price : &nbsp;<%= product.price %>
                                    </p>
                                    <p>Quantity:&nbsp;<%= product.qnty %>
                                    </p>
                                    <p >Amount:&nbsp;<span class="fw-bold"><%= product.qnty*product.price %></span>
                                    </p>
                                </div>
                            </div>
                            <% }); %>

                                <!-- </div> -->
                    </div>


                </div>
            </div>
        </div>





    </div>
    <%- include('../admin/layout/adminfooter.ejs') -%>