<%-include('../admin/layout/adminhead.ejs') -%>

<div class="page-content">
  <div class="bg-dash-dark-2 py-4">
    <div class="container-fluid">
      <h2 class="h5 mb-0">Customer details</h2>
    </div>
  </div>
  <div class="table container p-5 ">
    <table id="myTable" class="table table-striped table-bordered table-responsive table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <!-- <th scope="col">Full Name</th> -->
          <th scope="col">User Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
          <th scope="col">Status</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(function(user,i){ %>
        <tr>
          <td>
            <%= i+1 %>
          </td>
          <td>
            <%= user.userName %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <td>
            <%= user.phone %>
          </td>
          <td>
            <% if (user.status=="unbanned" ) { %>
            <p class="text-success">Not banned</p>
            <% } else { %>
            <p class="text-warning">Banned</p>
            <% } %>
          </td>
          <td>
            <div class="d-flex flex-lg-row justify-content-center">
              <% if (user.status=="unbanned" ) { %>
              <form action="/blockUser/<%= user._id %> " method="post">
                <button type="submit" class="btn btn-outline-warning " style="width: 110px;">Ban</button>
              </form>
              <% } else { %>
              <form action="/unblockUser/<%= user._id %> " method="post">
                <button type="submit" class="btn btn-outline-success">unban</button>
              </form>
              <% } %>
              <form class="ms-2" action="/deleteuser/<%= user._id %>" method="post">
                <button type="submit" class="btn btn-outline-danger">Delete</button>
              </form>
            </div>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <%-include('../admin/layout/adminfooter.ejs') -%>