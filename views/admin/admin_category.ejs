<%- include('../admin/layout/adminhead.ejs') -%>
<div class="page-content">
  <div class="bg-dash-dark-2 py-4">
    <div class="container-fluid d-flex justify-content-between">
      <h2 class="h5 mb-0">Categories</h2>
      <a href="/addcategory" class="btn btn-primary me-3 fw-bolder ">Add category</a>
    </div>
  </div>
  <div class="container p-5 ">
    <table id="myTable" class="table table-striped table-bordered table-responsive table-hover" style="color: white !important;">
      <thead>
        <tr>
          <th scope="col"> #</th>
          <th scope="col"> Category</th>
          <th scope="col">Name</th>
          <th scope="col">Last Date</th>
          <th scope="col">Status</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% Categories.forEach(function(category,i){ %>
        <tr>
          <td>
            <%= i+1 %>
          </td>
          <td>
            <img style="width: 80px; height: 50px;" src="productimages/<%= category.image %>">
          <td>
            <%= category.categoryName %>
          </td>
          <td>
            <%= category.date %>
          </td>
          <td>
            <% if(category.status=="Show" ) { %>
            <p class="text-success">show</p>
            <% } else { %>
            <p class="text-warning">Hide</p>
            <% } %>
          </td>
          <td>
            <div class="d-flex flex-lg-row">
              <form action="/updatecategory/<%= category._id %>" method="get">
                <button type="submit" class="btn btn-outline-success" style="width: 110px;">Edit</button>
              </form>
              <form action="/deletecategories/<%= category._id %>/<%= category.image %>" method="post">
                <button type="submit" class="btn btn-outline-danger ms-2">Delete</button>
              </form>
            </div>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <%-include('../admin/layout/adminfooter.ejs') -%>